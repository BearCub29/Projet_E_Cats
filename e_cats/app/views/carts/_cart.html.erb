<div class="container">
  <div class="card col p-0 m-1" >
    <div class="card-header">
      <h3><i class="fas fa-shopping-cart"></i> Panier</h3>
        </div>
        <ul class="list-group list-group-flush">
        <% @orders.each do |join| %>
          <li class="list-group-item"> <i class="fas fa-cat"></i><p> Titre photo : <%= @item =  Item.find(join.item_id).title %> </p><p> Prix : <%= Item.find(join.item_id).prix %> € </p>

          <%= link_to "Delete", join_item_cart_path(join.id), method: :delete, class: "btn btn-outline-dark" %>
          <i class="fas fa-trash-alt"></i>
          </li>
          </ul>
          <% @total += Item.find(join.item_id).prix  %>
          <% end %>
    <p>total :  <%= @total %> €</p>
    <%= render "paybycart" %>
  </div>
</div>


