<%= form_tag(items_path, method: "get",   
    class: 'navbar-form navbar-left') do %>  
  <div class="input-group">  
    <%= search_field_tag :search, params[:search], placeholder: "Ex. hus", class: "form-control" %>  
    <div class="input-group-btn">
      <%= button_tag "", class: "btn btn-info fas fa-search",:name => nil%> 

    </div>  
  </div>  
<% end %>
    </form>

<% @results.each do|result| %>

<%= result.title %>

  <% end %>

<div class="container">
  <div class="row justify-content-center">
    <% @items.each do |item| %>
      <div class="card m-2 col-sm-12 col-md-4 col-lg-3 text-center p-0"  >
          <%= image_tag "chat.jpg", class: "card-img-top p-2", alt: "Card image cap" %>
        <div class="card-body">
          <h5 class="card-title">Titre : <%=item.title%> </h5>
          <h6 class="card-text">Description : <%=item.description%> </h6>
          <h5 class="card-title">Prix : <%=item.prix%> </h5>
          <%= link_to"Go Picture", item_path(@id = item.id), class: "btn btn-success btn-lg btn-block" %>
        </div>
        <div class="card-footer">
           <small class="text-muted">★ ★ ★ ★ ☆</small>
        </div>
      </div>
    <% end %>
  </div>
</div>
